@{
  Layout = "_Layout";
}

@using VendorOrder.Models;
@using System.Globalization;

<h3>@Model["vendor"].Name</h3>
<a href='/vendors/@Model["vendor"].Id/orders/new'><button type="button">New Order</button></a>
<ul>
  @foreach(Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>Order @order.Id</a> - @order.Item - @order.Date.ToShortDateString() - @order.Cost.ToString("C", CultureInfo.CurrentCulture)</li>
  }
</ul>


