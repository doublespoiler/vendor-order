@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

  <h1>Your Vendors</h1>
@if (@Model.Count == 0)
{
  <h3>There are no Vendors, please <a href="/vendors/new">add one!</a></h3>
}

<ul>
  @foreach(Vendor vendor in Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>
<a href="/vendors/new"><button type="button">Add a New Vendor</button></a>

